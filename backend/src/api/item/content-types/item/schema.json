{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Item"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "code": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "city": {
      "type": "enumeration",
      "enum": ["Düsseldorf", "Köln"],
      "required": true
    },
    "size": {
      "type": "enumeration",
      "enum": ["S", "M", "L"],
      "required": true
    },
    "hasCamera": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "tier": {
      "type": "enumeration",
      "enum": ["basic", "premium"],
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["active"],
      "default": "active",
      "required": true
    },
    "priceMonthly": {
      "type": "decimal",
      "required": true
    }
  }
}
